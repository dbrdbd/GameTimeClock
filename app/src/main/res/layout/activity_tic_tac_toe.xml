<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/board"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:id="@+id/tictactoe1" />

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:id="@+id/tictactoe2" />

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:id="@+id/tictactoe3" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:id="@+id/tictactoe4" />

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:id="@+id/tictactoe5" />

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:id="@+id/tictactoe6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:id="@+id/tictactoe7" />

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:id="@+id/tictactoe8" />

            <Button
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:id="@+id/tictactoe9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:layout_marginTop="10dp"
                android:id="@+id/gameInfo"
                android:layout_column="1"
                android:gravity="center_horizontal" />
        </TableRow>
    </TableLayout>

</LinearLayout>
